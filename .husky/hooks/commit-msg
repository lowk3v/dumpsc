#!/bin/sh

function mod() {
   cat "$1" | sed 's/\[fix\]/ðŸž/g' \
	 | sed 's/\[feat\]/ðŸ’ª/g' \
	 | sed 's/\[docs\]/ðŸ“š/g' \
	 | sed 's/\[refactor\]/ðŸ”¨/g' \
	 | sed 's/\[test\]/ðŸš¨/g' \
	 | sed 's/\[build\]/ðŸ‘·/g' \
	 | sed 's/\[chore\]/ðŸ”§/g' \
	 | sed 's/\[release\]/ðŸ”–/g' \
	 | sed 's/\[security\]/ðŸ”’/g' \
	 | sed 's/\[config\]/ðŸ”§/g' \
	 | sed 's/\[add\]/âž•/g' \
	 | sed 's/\[remove\]/âž–/g' \
	 | sed 's/\[update\]/ðŸ”¼/g' \
	 | sed 's/\[hotfix\]/ðŸš‘/g'
}

message="$(mod $1)"
echo "$message" > $1
